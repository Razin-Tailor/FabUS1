


<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">
    <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/m"
        android:onClick="mayank"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:orientation="horizontal" android:layout_width="fill_parent"
            android:layout_marginLeft="80dp">

            <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/komal"
            android:onClick="komal"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent"
        android:layout_marginLeft="20dp">
        <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/s"
        android:onClick="shreya"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_below="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent"
            android:layout_marginLeft="80dp">
            <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/h2"
            android:onClick="hetashvi"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent"
        android:layout_marginLeft="20dp">
        <Button
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/g"
        android:onClick="gaurang"
        android:layout_row="0"
        android:layout_column="6"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent"
            android:layout_marginLeft="80dp">
            <Button
            android:id="@+id/button6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/d"
            android:onClick="devesh"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_below="@+id/button5"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent"
        android:layout_marginLeft="20dp">
        <Button
        android:id="@+id/button7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/kish"
        android:onClick="kishan"
        android:layout_row="0"
        android:layout_column="8"
        android:layout_above="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent"
            android:layout_marginLeft="80dp">
            <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/r"
            android:onClick="razin"
            android:layout_row="0"
            android:layout_column="9" />
            </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fabulous US"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:singleLine="true"
        android:textColor="#c3c3c3"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="80dp" />


</LinearLayout>





